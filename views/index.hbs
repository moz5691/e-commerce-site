{{#each inventory}}
<div class="row mt-5">
  <div class="col-sm-4 col-md-6 col-lg-5 col-xl-5 align-items-center " style="border:1px solid white">
    <img class="align-self-center item-image" src={{this.itemImgPath}}>
  </div>
  <div class="col-sm-4 col-md-3 col-lg-5 col-xl-5" style="border:1px solid white">
    <ul class="list-group">
      <li class="list-unstyled">Name: {{this.itemName}}</li>
      <li class="list-unstyled">Department: {{this.itemDepartment}}</li>
      <li class="list-unstyled">Description: {{this.itemDescription}}</li>
      <li class="list-unstyled">Seller: {{this.itemSeller}}</li>
      <li class="list-unstyled">Price: ${{this.itemPrice}}</li>
      <li class="list-unstyled">In stock: {{this.itemCount}}</li>
      <li class="list-unstyled">SKU No.: {{this.id}}</li>
    </ul>
  </div>
  <div class="col-sm-4 col-md-3 col-lg-2 col-xl-2" style="border:1px solid white">
    <a href="/purchase/{{this.id}}" id="buyBtn" class="btn btn-outline-primary ml-5">Add</a>
    <br>
    <a href="/review/{{this.id}}" id="reviewBtn" class="btn btn-outline-primary ml-5">Review</a>
  </div>
  <hr />
</div>
{{/each}}


<nav aria-label="Page navigation example">
  <ul class="pagination justify-content-center">
    <li class="page-item disabled">
      <a class="page-link" href="#" tabindex="-1">Previous</a>
    </li>
    <li class="page-item"><a class="page-link" href="#">1</a></li>
    <li class="page-item"><a class="page-link" href="#">2</a></li>
    <li class="page-item"><a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#">Next</a>
    </li>
  </ul>
</nav>