<h4 class="text-center">Cart</h4>


{{#each items}}
<div class="card flex-row flex-wrap">
  <div class="card-header border-0">
    <img class="cart-img" src="{{this.item.itemImgPath}}" alt="">
  </div>
  <div class="card-block px-2">
    <h5 class="card-title">{{this.item.itemName}}</h5>
    <h4 class="card-text"><span class="badge badge-primary">{{this.qty}}</span></h4>
    <p class="card-text">${{this.item.itemPrice}}</span></p>
    <button type="button" class="btn btn-primary btn-sm">+</button>
    <button type="button" class="btn btn-secondary btn-sm">-</button>
  </div>
  <div class="w-100"></div>
  <div class="card-footer w-100 text-muted">
    Total Price ${{ this.price }}
  </div>
</div>
{{/each}}

</div>

<div class="row">
  <div class="text-center col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h5><strong>Total Price: ${{ totalPrice }}</strong> </h5>
  </div>

  <a href="/purchase/checkout" class="btn btn-primary">Buy</a>
</div>



<h3 class="text-center">Purchase History</h3>
<table class="table">
  <thead>
    <tr>
      <th scope="col">SKU</th>
      <th scope="col">Product Name</th>
      <th scope="col">Unit Price</th>
      <th scope="col">Quantity</th>
      <th scope="col">Total Price</th>
      <th scope="col">Date</th>
  </thead>
  <tbody>
    {{#each purchase}}
    <tr>
      <th scope="row">TBD</th>
      <td>TBD</td>
      <td>TBD</td>
      <td>{{this.cart.totalQty}}</td>
      <td>{{this.cart.totalPrice}}</td>
      <td>TBD</td>
    </tr>
    {{/each}}
  </tbody>
</table>